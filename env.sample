# GuildSync Environment Sample
# Copy this file to .env and fill in your actual secrets and configuration

# Discord Bot Token (required)
DISCORD_TOKEN=your-discord-bot-token-here

# LLMs
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-3.5-turbo

# Node environment (optional, defaults to 'development')
NODE_ENV=development

# Local development database (SQLite)
DATABASE_URL="file:./db.sqlite"

# For production with PostgreSQL or Supabase, override this with:
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# Dev Guild
# DEV_GUILD_ID=
